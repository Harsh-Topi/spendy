{
  "name": "Spendy",
  "description": "A minimalistic online spending tracker",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_title": "Open Spendy"
  },
  "externally_connectable": {
    "matches": ["https://harshtopi.com/*", "http://localhost:3000/*"]
  },
  "icons": {
    "16": "logo192.png",
    "48": "logo192.png",
    "128": "logo192.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "notifications",
    "storage"
  ],
  "content_scripts": [
    {
      "exclude_matches": ["https://*.google.com/*", "https://*.facebook.com/*"],
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
